@model FireBasics.Models.User

@{
    ViewData["Title"] = "Farmer Details";
}

<h1>@Model.Name's Details</h1>

<div>
    <h4>Personal Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Date of Birth:
        </dt>
        <dd class="col-sm-10">
            @Model.Dob
        </dd>
        <dt class="col-sm-2">
            Bio:
        </dt>
        <dd class="col-sm-10">
            @Model.Bio
        </dd>
    </dl>
</div>

<div>
    <h4>Products Sold</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <!-- Add more product details if needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        @product.ProductName
                    </td>
                    <td>
                        @product.ProductDescription
                    </td>
                    <td>
                        @product.Price
                    </td>
                    <!-- Add more product details if needed -->
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .profile-picture {
        width: 150px;
        height: 450px;
        border-radius: 20%;
        object-fit: cover;
    }
</style>
