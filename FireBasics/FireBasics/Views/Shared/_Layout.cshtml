<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FireBasics</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mycsstheme.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/FireBasics.styles.css" asp-append-version="true" />
    <style>
        .sidebar {
            height: 100vh;
            width: 300px;
            position: fixed;
            top: 0;`
            left: 0;
            background-image: linear-gradient(to bottom, #C4A500 48%, #4FA577 90%);
            color: white;
            padding-top: 20px;
        }

        .top-bar {
            position: fixed;
            top: 20px;
            right: 0;
            left: 250px; /* Adjust to match sidebar width */
            height: 50px;
            background-color: #white;
            color: black;
            font-size: 20px;
            display: flex;
            justify-content: flex-end; /* Align items to the right */
            align-items: center;
            padding: 0 20px;
            z-index: 1000; /* Ensure it is on top */
        }

            .top-bar a {
                color: #00260E;
                text-decoration: none;
                padding: 10px;
                padding-top: 10px;
                margin-left: 10px;
            }

                .top-bar a:hover {
                    color: #005620;
                }


            .sidebar .navbar-brand {
                text-align: center;
                margin-bottom: 20px; /* Ensure proper spacing from other elements */
            }

            .sidebar a {
                color: white;
                padding: 10px 15px;
                text-decoration: none;
                display: block;
                text-align: center;
                font-size: 20px;
            }

                .sidebar a:hover {
                    background-color: white;
                    color: green;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="brand-wrapper">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="css/logo.png" alt="Logo" style="height: 250px;" />
            </a>
        </div>
        <div class="nav-links">
            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
            <br />
            <a class="nav-link active" asp-area="" asp-controller="About" asp-action="Index"><i class="fas fa-info-circle"></i> About us</a>
            <br />
            <a class="nav-link active" asp-area="" asp-controller="Category" asp-action="Index"><i class="fas fa-th"></i> Categories</a>
            <br />
            <a class="nav-link active" asp-area="" asp-controller="Product" asp-action="Index"><i class="fas fa-box-open"></i> Market</a>
            <br />
            <a class="nav-link active" asp-area="" asp-controller="User" asp-action="Index"><i class="fas fa-users"></i> Our Suppliers</a>
            <br />
            <a class="nav-link active" asp-area="" asp-controller="Admin" asp-action="Index"><i class="fas fa-farmer"></i> Add Farmer</a>
        </div>
    </div>

    <div class="top-bar">
        <a class="nav-link active" asp-area="" asp-controller="Checkout" asp-action="Pay"><i class="fas fa-shopping-cart"></i> Cart</a>

        <br />
        <a class="nav-link active" asp-area="" asp-controller="Auth" asp-action="signin"><i class="fas fa-user"></i> Login</a>

    </div>


    <div class="content">

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
