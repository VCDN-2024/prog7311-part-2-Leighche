@model IEnumerable<FireBasics.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<h1>Our Categories</h1>
<br />
<br />
<br />
<br />
<div class="card-container">

    @foreach (var item in Model)
    {
        <a href="@Url.Action("Details", "Category", new { id = item.CategoryId })" class="card" style="background-image: url('@item.ImageUrl')">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.CategoryName)</h5>

            </div>
        </a>
    }
</div>

<style>
    h1 {
        color: #1E3F2D;
    }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        text-decoration: none;
        color: inherit;
        border: 1px solid #ddd;
        border-radius: 8px;
        position: relative; /* Position relative for absolute positioning */
        overflow: hidden; /* Hide overflow for the overlay */
        width: 400px; /* Adjust as needed */
        height: 300px;
        transition: all 0.3s ease;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

        .card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url(''); /* Set the background image here */
            filter: blur(5px); /* Blur the overlay background */
            z-index: 1; /* Ensure overlay is behind text */
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            color: black;
        }

    .card-body {
        position: relative; /* Position relative for z-index */
        z-index: 2; /* Ensure text is above overlay */
        text-align: center; /* Center the text */
        color: white;
    }

    .card-title {
        margin: 0;
        padding-top: 84px;
        font-size: 55px; /* Adjust the font size as needed */
        color: black;
    }

    body {
        background-image: url('css/category.jpg');
        background-position: 300px top; /* Adjust the value to start 300px away from the left */
        background-repeat: no-repeat; /* Ensure the background image doesn't repeat */
        background-size: 1650px 950px; /* Set a specific size for the background image */
        background-attachment: fixed; /* This keeps the image fixed while scrolling */
    }
</style>
