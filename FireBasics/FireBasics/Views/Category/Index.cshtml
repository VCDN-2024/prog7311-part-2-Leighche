@model IEnumerable<FireBasics.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="card-container">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("Details", "Category", new { id = item.CategoryId })" class="card" style="background-image: url('@item.Image_Url')">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.CategoryName)</h5>
                <!-- Additional details if needed -->
            </div>
        </a>
    }
</div>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        text-decoration: none;
        color: inherit;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        width: 400px; /* Adjust as needed */
        height: 300px;
        transition: all 0.3s ease;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        /* Customize card body style */
    }

    .card-title {
        margin: 0;
        /* Customize card title style */
    }
</style>
