@model IEnumerable<FireBasics.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<h1>Our Categories</h1>
<br />
<br />
<br />
<br />
<div class="card-container">

    @foreach (var item in Model)
    {
        <a href="@Url.Action("Details", "Category", new { id = item.CategoryId })" class="card" style="background-image: url('@item.Image_Url')">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.CategoryName)</h5>
                <!-- Additional details if needed -->
            </div>
        </a>
    }
</div>

<style>

    h1{
        color:#1E3F2D;
    }
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        text-decoration: none;
        color: inherit;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        width: 400px; /* Adjust as needed */
        height: 300px;
        transition: all 0.3s ease;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        color: Black;
        }


    .card-body {
        text-align: center; /* Center the text */
        color: darkcyan;
    }

    .card-title {
        margin: 0;
        padding-top: 74px;
        font-size: 35px; /* Adjust the font size as needed */
        color: Black;
    }

    body {
        background-image: url('css/Design.png');
        background-position: 300px top; /* Adjust the value to start 300px away from the left */
        background-repeat: no-repeat; /* Ensure the background image doesn't repeat */
        background-size: 1650px 950px; /* Set a specific size for the background image */
        background-attachment: fixed; /* This keeps the image fixed while scrolling */
    }
</style>
